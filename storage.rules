rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // notices/{userId}/{uuid}.pdf
    // 読み取りは誰でも可（公開PDF）
    // 書き込みは本人のみ
    match /notices/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
