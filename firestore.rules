rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ── users ────────────────────────────────────────────────
    // 自分のドキュメントのみ読み書き可能
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // company_information サブコレクション
      // 読み取りは誰でも可（公告一覧ページ用 collectionGroup クエリ対応）
      // 書き込みは本人のみ
      match /company_information/{docId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId;

        // notices サブコレクション（決算公告PDF）
        // 読み取りは誰でも可（公開ページ用）
        // 書き込みは本人のみ
        match /notices/{noticeId} {
          allow read: if true;
          allow write: if request.auth != null && request.auth.uid == userId;
        }
      }

      // subscription サブコレクション
      match /subscription/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // subscription_plans サブコレクション
      match /subscription_plans/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // ── electronic_public_notices ────────────────────────────
    // 読み取りは誰でも可（公開ページ用）
    // 書き込みは本人のみ
    match /electronic_public_notices/{noticeId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null
                            && resource.data.userId == request.auth.uid;
    }

    // ── collectionGroup クエリ用 ─────────────────────────────
    // company_information と notices への collectionGroup 読み取りを許可
    match /{path=**}/company_information/{docId} {
      allow read: if true;
    }
    match /{path=**}/notices/{noticeId} {
      allow read: if true;
    }
  }
}
